{{#if loggedIn}}
<form class="card">
    <div class="card-header">Comment...</div>
    <div class="card-body">
        <textarea class="card-text" name="comment-body"></textarea>
    
        <button id="add-comment-btn" class="btn btn-primary" type="submit">Submit</button>
    </div>
</form>
{{/if}}

<div class="comment">
    {{#each post.comments}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}